<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_video_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:padding="8dp"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:src="@drawable/src_video_start"/>

    <TextView
        tools:text="06:21"
        android:id="@+id/tv_video_currentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/iv_video_play"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/sb_video_seekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_toStartOf="@+id/tv_video_endTime"
        android:layout_toEndOf="@+id/tv_video_currentTime"
        />

    <TextView
        android:id="@+id/tv_video_endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_video_fullscreen"
        tools:text="10:10"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        />
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_video_fullscreen"
        android:layout_marginStart="8dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/src_video_fullscreen_por"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>